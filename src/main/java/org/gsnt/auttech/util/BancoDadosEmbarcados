    oreletrico integer DEFAULT 0,
    ormotor integer DEFAULT 0,
    orinjecao integer DEFAULT 0,
    ormecanica integer DEFAULT 0,
    orpneu integer DEFAULT 0,
    orstcliente integer DEFAULT 0,
