(
    cod bigint NOT NULL DEFAULT nextval('sqcodstatusatendimento'::regclass),
    codos bigint,
    codorcamento bigint,
    codveiculo bigint NOT NULL,
    eletrico integer DEFAULT 0,
    injecao integer DEFAULT 0,
    caixa integer DEFAULT 0,
